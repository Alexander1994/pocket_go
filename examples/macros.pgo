;; macros
;; they template the args directly into the expressions then evaluate the expression
(macro inc (i) 
    (println i)
    (set i (+ i 1))
    (println i)
    (println '(inked!))
) 

(def y 0)
(inc y)
(inc y)
(inc y)

(macro ifnot (num expr)
    (if (= num 0) expr)
)


(ifnot 1 (println '(macros are boring!) ) )
(ifnot 0 (println '(macros are neat!) ) )
